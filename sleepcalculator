<p><strong>Ideal Sleep Hours per Night:</strong> <span id="idealHours">--</span> hours</p>

<button onclick="calculateSleepDebt()">Submit & Calculate</button>

<div class="result" id="result"></div>
<div id="zoneMessage"></div>

<!-- CHART -->
<canvas id="sleepChart" style="margin-top: 30px;"></canvas>

<script>
  // Tracker logic
  const min = 1, max = 9;
  const trackers = document.querySelectorAll(".scale-container");

  trackers.forEach(container => {
    const tracker = container.querySelector(".tracker");
    const day = container.getAttribute("data-day");
    const output = document.getElementById(day + "Val");
    let dragging = false;

    tracker.addEventListener("mousedown", () => dragging = true);
    document.addEventListener("mouseup", () => dragging = false);

    document.addEventListener("mousemove", e => {
      if (!dragging) return;
      const rect = container.getBoundingClientRect();
      let offsetX = e.clientX - rect.left;
      if (offsetX < 0) offsetX = 0;
      if (offsetX > rect.width) offsetX = rect.width;

      tracker.style.left = `${(offsetX / rect.width) * 100}%`;
      const ratio = offsetX / rect.width;
      const hours = Math.round(min + ratio * (max - min));
      output.textContent = hours;
    });
  });

  function getIdealSleep(ageGroup) {
    switch (ageGroup) {
      case "child": return 9;
      case "teen": return 8;
      case "adult": return 7;
      default: return null;
    }
  }

  let sleepChart = null;

  function renderChart(sleepValues) {
    const ctx = document.getElementById("sleepChart");

    if (sleepChart !== null) sleepChart.destroy();

    sleepChart = new Chart(ctx, {
      type: "bar",
      data: {
        labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
        datasets: [{
          label: "Hours Slept",
          data: sleepValues,
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: {
            beginAtZero: true,
            suggestedMax: 10,
            title: {
              display: true,
              text: "Hours Slept"
            }
          }
        }
      }
    });
  }

  function calculateSleepDebt() {
    const participant = document.getElementById('participant').value.trim();
    const ageGroup = document.getElementById('ageGroup').value;
    const ideal = getIdealSleep(ageGroup);

    if (!participant) {
      alert("Please enter your name before submitting.");
      return;
    }
    if (!ideal) {
      alert("Please select your age group.");
      return;
    }

    document.getElementById('idealHours').textContent = ideal;

    let totalDebt = 0;
    let totalSleep = 0;
    const days = ['mon','tue','wed','thu','fri','sat','sun'];

    for (let i = 0; i < days.length; i++) {
      const slept = parseFloat(document.getElementById(days[i] + "Val").textContent) || 0;
      totalSleep += slept;
      const debt = ideal - slept;
      if (debt > 0) totalDebt += debt;
    }

    const resultDiv = document.getElementById('result');
    resultDiv.innerHTML = `<strong>${participant}</strong>, your total sleep debt for the past week is <strong>${totalDebt.toFixed(1)} hours</strong>.`;

    if (totalDebt > 0) {
      const recovery = (totalDebt / days.length).toFixed(1);
      resultDiv.innerHTML += `<br>Suggested extra sleep per night to recover: <strong>${recovery} hours</strong>.`;
    } else {
      resultDiv.innerHTML += `<br>Great! You're keeping up with your ideal sleep.`;
    }

    const zoneDiv = document.getElementById('zoneMessage');
    zoneDiv.className = "zone-message";

    if (totalSleep < 29) {
      zoneDiv.classList.add("red-zone");
      zoneDiv.textContent = "Very little sleep â€” high risk of sleep deprivation.";
    } else if (totalSleep >= 30 && totalSleep <= 48) {
      zoneDiv.classList.add("yellow-zone");
      zoneDiv.textContent = "Some rest, but still below recommended levels.";
    } else {
      zoneDiv.classList.add("green-zone");
      zoneDiv.textContent = "Healthy sleep range. Good job!";
    }

    // Chart values
    const sleepValues = days.map(day =>
      parseFloat(document.getElementById(day + "Val").textContent) || 0
    );

    renderChart(sleepValues);
  }
</script>

</body>
